#!/usr/bin/env bash

# Install the vps binary
# Must run with sudo privileges

set -e

# logging

ESeq="\x1b["
RCol="$ESeq"'0m'
BIRed="$ESeq"'1;91m'
BIGre="$ESeq"'1;92m'
BIYel="$ESeq"'1;93m'
BIWhi="$ESeq"'1;97m'

printSection() {
  echo -e "${BIYel}>>>> ${BIWhi}${1}${RCol}"
}

info() {
  echo -e "${BIWhi}${1}${RCol}"
}

success() {
  echo -e "${BIGre}${1}${RCol}"
}

error() {
  echo -e "${BIRed}${1}${RCol}"
}

errorAndExit() {
  echo -e "${BIRed}${1}${RCol}"
  exit 1
}

# !logging

if [[ $(id -u) -ne 0 ]]; then
  errorAndExit "Please run this script with sudo privileges."
fi

printSection "Installing vps binary"
info "Dowloading and installing binary"

case $(uname | tr '[:upper:]' '[:lower:]') in
  linux*)
    PLATFORM=linux
    ARCH=amd64
    ;;
  darwin*)
    PLATFORM=darwin
    ARCH=arm64
    ;;
esac

rm -f /usr/local/bin/vps
curl -L https://github.com/deviantony/anthony.portainer.io/releases/download/bin/vps-${PLATFORM}-${ARCH} -o /usr/local/bin/vps
chmod 755 /usr/local/bin/vps

success "vps binary successfully installed"

exit 0